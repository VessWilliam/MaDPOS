@{
    ViewData["Title"] = "Payment";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Payment Details</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h6 class="alert-heading">Order Total</h6>
                    <p class="mb-0">$@ViewBag.Total.ToString("N2")</p>
                </div>

                <form asp-action="ProcessPayment" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label class="form-label">Payment Method</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="cash" value="CASH" checked>
                            <label class="form-check-label" for="cash">
                                <i class="bi bi-cash"></i> Cash
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="card" value="CREDIT CARD">
                            <label class="form-check-label" for="card">
                                <i class="bi bi-credit-card"></i> Credit Card
                            </label>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Amount Received</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="number" name="amount" class="form-control" value="@ViewBag.Total" step="0.01" min="@ViewBag.Total" required>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Complete Payment
                        </button>
                        <a asp-controller="Client" asp-action="Cart" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Cart
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}